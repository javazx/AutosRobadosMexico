<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="auto.javax.valeriano.autosrobadosmexico.AmisMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewAmis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/amis" />

        <TextView
            android:id="@+id/textView2Amis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amis_info"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextAmis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="NIV" />

        <Button
            android:id="@+id/button2Amis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Validar NIV" />

        <Button
            android:id="@+id/button3Amis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva Busqueda..." />

        <Button
            android:id="@+id/button4Amis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descargar PDF" />

        <WebView
            android:id="@+id/webView1Amis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:longClickable="false"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewAmis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:adSize="SMART_BANNER"
                app:adUnitId="@string/banner_ad_unit_id4"></com.google.android.gms.ads.AdView>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
